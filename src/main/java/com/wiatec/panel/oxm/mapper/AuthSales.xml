<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiatec.panel.oxm.dao.AuthSalesDao">
    <resultMap type="com.wiatec.panel.oxm.pojo.AuthSalesInfo" id="authSalesInfo">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="permission" property="permission"/>
        <result column="firstName" property="firstName"/>
        <result column="lastName" property="lastName"/>
        <result column="ssn" property="ssn"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <sql id="select">
        SELECT id, username, password, firstName, lastName, ssn, email, phone, createTime
        FROM auth_sales
        WHERE permission='sales'
    </sql>

    <select id="countOne" resultType="int" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        SELECT COUNT(*) FROM auth_sales
        WHERE username=#{username}
              AND password=#{password}
    </select>

    <select id="selectPermission" resultType="String" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        SELECT permission
        FROM auth_sales
        WHERE username=#{username}
              AND password=#{password}
    </select>

    <select id="countUsername" resultType="int" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        SELECT COUNT(*)
        FROM auth_sales
        WHERE username=#{username}
    </select>

    <select id="countSSN" resultType="int" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        SELECT COUNT(*)
        FROM auth_sales
        WHERE ssn=#{ssn}
    </select>

    <select id="countEmail" resultType="int" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        SELECT COUNT(*)
        FROM auth_sales
        WHERE email=#{email}
    </select>

    <insert id="insertOne" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        INSERT INTO auth_sales (username, password, firstName, lastName, ssn, email, phone)
        VALUES (#{username}, #{password}, #{firstName}, #{lastName}, #{ssn}, #{email}, #{phone})
    </insert>

    <update id="updatePassword" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        UPDATE auth_sales
        SET password=#{password}
        WHERE id=#{id}
    </update>

    <select id="selectOne" resultMap="authSalesInfo" parameterType="com.wiatec.panel.oxm.pojo.AuthSalesInfo">
        <include refid="select"/>
        AND username=#{username}
    </select>

    <select id="selectAll" resultMap="authSalesInfo">
        <include refid="select"/>
    </select>

</mapper>