<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiatec.panel.oxm.dao.PayOrderDao">
    <resultMap type="com.wiatec.panel.paypal.PayOrderInfo" id="payOrderInfo">
        <id column="id" property="id"/>
        <result column="invoice" property="invoice"/>
        <result column="category" property="category"/>
        <result column="price" property="price"/>
        <result column="txFee" property="txFee"/>
        <result column="currency" property="currency"/>
        <result column="paymentStatus" property="paymentStatus"/>
        <result column="salesId" property="salesId"/>
        <result column="clientKey" property="clientKey"/>
        <result column="description" property="description"/>
        <result column="transactionId" property="transactionId"/>
        <result column="payerId" property="payerId"/>
        <result column="payerEmail" property="payerEmail"/>
        <result column="receiverId" property="receiverId"/>
        <result column="verifySign" property="verifySign"/>
        <result column="paymentDate" property="paymentDate"/>
        <result column="comment" property="comment"/>
    </resultMap>


    <insert id="insertOne" parameterType="com.wiatec.panel.paypal.PayOrderInfo">
        INSERT INTO pay_order (invoice, category, price, currency, salesId, clientKey, description)
        VALUES (#{invoice}, #{category}, #{price}, #{currency}, #{salesId}, #{clientKey}, #{description})
    </insert>

    <update id="updateByInvoice" parameterType="com.wiatec.panel.paypal.PayOrderInfo">
        UPDATE pay_order
        SET paymentStatus=#{paymentStatus}, transactionId=#{transactionId}, payerId=#{payerId}, payerEmail=#{payerEmail},
            receiverId=#{receiverId}, verifySign=#{verifySign}, paymentDate=#{paymentDate}, txFee=#{txFee}
        WHERE invoice=#{invoice}
    </update>

    <select id="selectOneByInvoice" parameterType="String" resultMap="payOrderInfo">
        SELECT * FROM pay_order WHERE invoice=#{_parameter}
    </select>

    <select id="selectOneByClientKey" parameterType="String" resultMap="payOrderInfo">
        SELECT * FROM pay_order WHERE clientKey=#{_parameter}
    </select>

</mapper>