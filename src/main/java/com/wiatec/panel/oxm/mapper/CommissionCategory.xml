<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiatec.panel.oxm.dao.CommissionCategoryDao">
    <resultMap type="com.wiatec.panel.oxm.pojo.CommissionCategoryInfo" id="commissionCategoryInfo">
        <id column="id" property="id"/>
        <result column="category" property="category"/>
        <result column="deposit" property="deposit"/>
        <result column="monthPay" property="monthPay"/>
        <result column="expires" property="expires"/>
        <result column="bonus" property="bonus"/>
        <result column="activate_pay" property="activatePay"/>
        <result column="ldCommission" property="ldCommission"/>
        <result column="dealerCommission" property="dealerCommission"/>
        <result column="salesCommission" property="salesCommission"/>
        <result column="description" property="description"/>
    </resultMap>

    <sql id="select">
        SELECT id, category, deposit, monthPay, expires, bonus, activate_pay, ldCommission,
            ldeCommission,  dealerCommission, salesCommission, description
        FROM commission_category
    </sql>

    <select id="selectAll" resultMap="commissionCategoryInfo">
        <include refid="select"/>
    </select>

    <select id="selectOne" resultMap="commissionCategoryInfo" parameterType="java.lang.String">
        <include refid="select"/>
        WHERE category=#{_parameter}
    </select>

</mapper>